<p id="notice"><%= notice %></p>

<h1>Listing Work Fields</h1>

<table>
  <thead>
    <tr>
      <th>Field name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_fields.each do |work_field| %>
      <tr>
        <td><%= work_field.field_name %></td>
        <td><%= link_to 'Show', work_field %></td>
        <td><%= link_to 'Edit', edit_work_field_path(work_field) %></td>
        <td><%= link_to 'Destroy', work_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

