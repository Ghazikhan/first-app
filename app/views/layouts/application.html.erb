<!DOCTYPE html>
<html>
<head>
  <title>Demoapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/header' %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if logged_in_admin? %>
		<ol class="breadcrumb">
			<li><%= link_to 'Advertisment', advertises_path %></li>
			<li><%= link_to 'City', cities_path %></li>
			<li><%= link_to 'Degree', degres_path %></li>
			<li><%= link_to 'Institute', institutes_path %></li>
			<li><%= link_to 'Organization', organizations_path %></li>
			<li><%= link_to 'Work Field', work_fields_path %></li>
		</ol>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<section class="leftbar">
			<%= render 'shared/leftsidebar' %>
		</section>
	</div>
	<div class="col-md-6">
	<%= yield %>
	</div>
	<div class="col-md-3">
		<section class="rightbar">
			<%= render 'shared/rightsidebar' %>
		</section>
	</div>
</div>

</body>
</html>
