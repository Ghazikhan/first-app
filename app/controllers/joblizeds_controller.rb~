class JoblizedsController < ApplicationController
  before_action :set_joblized, only: [:show, :edit, :update, :destroy]

  # GET /joblizeds
  # GET /joblizeds.json
  def index
    @joblizeds = Joblized.all
    @user = current_user
  end

  # GET /joblizeds/1
  # GET /joblizeds/1.json
  def show
  	@user = current_user
  end

  # GET /joblizeds/new
  def new
    @joblized = Joblized.new
    @user = current_user
  end

  # GET /joblizeds/1/edit
  def edit
  end

  # POST /joblizeds
  # POST /joblizeds.json
  def create
    @joblized = @advertisment.joblizeds.create(joblized_params)

    respond_to do |format|
      if @joblized.save
        format.html { redirect_to @joblized, notice: 'Joblized was successfully created.' }
        format.json { render :show, status: :created, location: @joblized }
      else
        format.html { render :new }
        format.json { render json: @joblized.errors, status: :unprocessable_entity }
      end
    end
  end

  # PATCH/PUT /joblizeds/1
  # PATCH/PUT /joblizeds/1.json
  def update
    respond_to do |format|
      if @joblized.update(joblized_params)
        format.html { redirect_to @joblized, notice: 'Joblized was successfully updated.' }
        format.json { render :show, status: :ok, location: @joblized }
      else
        format.html { render :edit }
        format.json { render json: @joblized.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /joblizeds/1
  # DELETE /joblizeds/1.json
  def destroy
    @joblized.destroy
    respond_to do |format|
      format.html { redirect_to joblizeds_url, notice: 'Joblized was successfully destroyed.' }
      format.json { head :no_content }
    end
  end

  private
    # Use callbacks to share common setup or constraints between actions.
    def set_joblized
      @joblized = Joblized.find(params[:id])
    end

    # Never trust parameters from the scary internet, only allow the white list through.
    def joblized_params
      params.require(:joblized).permit(:title, :user_id, :work_field_id, :organization_id, :degre_id, :city_id)
    end
end
